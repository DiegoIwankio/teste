          <div class="mb-5">
            <label for="limiter" class="form-label">Input limiter</label>
            <textarea class="form-control" id="limiter"></textarea>
          </div>
        </div>
      </div>
    </div>
    <!-- /.col-lg-4 -->

    <div class="col-lg-4">
      <div class="card mb-3">
        <div class="card-header d-flex align-items-center gap-3">
          <h5 class="m-0 p-0">Autosize</h5>
          <!-- /.m-0 p-0 -->
          {{> toolbar}}
        </div>
        <!-- /.card-header d-flex align-items-center gap-3 -->
        <div class="card-body">
          <div class="mb-5">
            <label for="autosize" class="form-label">Textarea with Autosize</label>
