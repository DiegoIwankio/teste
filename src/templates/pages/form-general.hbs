    <div class="col-lg-4">
      <div class="card mb-3">
        <div class="card-header d-flex align-items-center gap-3">
          <h5 class="m-0 p-0">TagsInput</h5>
          <!-- /.m-0 p-0 -->
          {{> toolbar}}
        </div>
        <!-- /.card-header d-flex align-items-center gap-3 -->
        <div class="card-body">
          <div class="mb-3">
            <label for="tags" class="form-label">Tags</label>
            <input type="text" class="form-control" id="tags" value="foo,bar,baz">
          </div>
