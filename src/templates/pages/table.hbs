---
title: Table
icon: fa fa-table
cdncss:
- https://cdnjs.cloudflare.com/ajax/libs/datatables/1.10.12/css/dataTables.bootstrap.min.css
cdnjs:
- https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.0/jquery-ui.min.js
- https://cdnjs.cloudflare.com/ajax/libs/datatables/1.10.12/js/jquery.dataTables.min.js
- https://cdnjs.cloudflare.com/ajax/libs/datatables/1.10.12/js/dataTables.bootstrap.min.js
- https://cdnjs.cloudflare.com/ajax/libs/jquery.tablesorter/2.26.6/js/jquery.tablesorter.min.js
- //cdnjs.cloudflare.com/ajax/libs/jqueryui-touch-punch/0.2.3/jquery.ui.touch-punch.min.js
scripts:
- Metis.MetisTable()
- Metis.metisSortable()
---

<div class="container-fluid">
<!--Begin Datatables-->
<div class="row">
    <div class="col">
        <div class="card mb-3">
            <header class="card-header d-flex">
                <div class="icons"><i class="fa fa-table"></i></div>
                <h5>Dynamic Table</h5>
                {{> toolbar}}
            </header>
            <div id="collapse4" class="card-body">
                <table id="dataTable" class="table table-bordered table-condensed table-hover table-striped">
                    {{> dataTable}}
                </table>
            </div>
        </div>
    </div>
</div>
<!-- /.row -->
<!--End Datatables-->



<div class="row">
    <!-- .col-lg-6 -->
    <div class="col-lg-6">
        <div class="card mb-3">
            <header class="card-header d-flex">
                <h5>Default styles</h5>
                {{> toolbar}}
            </header>
            <div id="defaultTable" class="card-body collapse show">
                <table class="table responsive-table">
                    {{> tableBase}}
                </table>
            </div>
        </div>
    </div>
    <!-- /.col-lg-6 -->

    <!-- .col-lg-6 -->
    <div class="col-lg-6">
        <div class="card mb-3">
            <header class="card-header d-flex">
                <h5>Table Striped</h5>
                {{> toolbar}}
            </header>
            <div id="stripedTable" class="card-body collapse show">
                <table class="table table-striped responsive-table">
                    {{> tableBase}}
                </table>
            </div>
        </div>
    </div>
    <!-- /.col-lg-6 -->
</div>


<div class="row">
    <!-- .col-lg-6 -->
    <div class="col-lg-6">
        <div class="card mb-3">
            <header class="card-header d-flex">
                <h5>Table Bordered</h5>
                {{> toolbar}}
            </header>
            <div id="borderedTable" class="card-body collapse show">
                <table class="table table-bordered responsive-table">
                    {{> tableBase}}
                </table>
            </div>
        </div>
    </div>
    <!-- /.col-lg-6 -->

    <!-- .col-lg-6 -->
    <div class="col-lg-6">
        <div class="card mb-3">
            <header class="card-header d-flex">
                <h5>Table Condensed</h5>
                {{> toolbar}}
            </header>
            <div id="condensedTable" class="card-body collapse show">
                <table class="table table-condensed responsive-table">
                    {{> tableBase}}
                </table>
            </div>
        </div>
    </div>
    <!-- /.col-lg-6 -->
</div>
    <div class="row">
        <!-- .col-lg-6 -->
        <div class="col-lg-6">
            <div class="card mb-3">
                <header class="card-header d-flex">
                    <h5>Optional row classes</h5>
                    {{> toolbar}}
                </header>
                <div id="optionalTable" class="card-body collapse show">
                    <table class="table responsive-table">
                        {{> tableBase}}
                    </table>
                </div>
            </div>
        </div>
        <!-- /.col-lg-6 -->

        <!-- .col-lg-6 -->
        <div class="col-lg-6">
            <div class="card mb-3">
                <header class="card-header d-flex">
                    <h5>Sortable Table</h5>
                    {{> toolbar}}
                </header>
                <div id="sortableTable" class="card-body collapse show">
                    <table class="table table-bordered sortableTable responsive-table">
                        {{> tableSortable}}
                    </table>
                </div>
            </div>
        </div>
        <!-- /.col-lg-6 -->
    </div>
</div>
<!-- /.container-fluid -->